{{#if user}}
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <div class="card mb-3 mt-2">
        <img src="https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg"
          class="rounded-circle float-start" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{user.fullName}}</h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Email: {{user.email}}</li>
            <li class="list-group-item">Diaries: 15</li>
          </ul>
        </div>
        <div class="card-footer">
          <a href="#" type="button" class="btn btn-success">Update</a>
          <a href="/auth/logout" type="button" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{else}}
<h1>Is not User</h1>
{{/if}}